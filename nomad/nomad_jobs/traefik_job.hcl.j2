job "traefik" {
  datacenters = ["dc1"]

  type = "service"

  constraint {
    attribute = "${node.class}"
    value = "web_ingress"
  }

  group "traefik" {
    count = 1

    network {
      port  "http" {
          static = 80
      }
      port  "admin" {
          static = 8080
      }
      port  "deployments" {
          static = 8081
      }
    }

    service {
      name = "traefik-http"
      provider = "nomad"
      port = "http"
    }

    task "server" {
      driver = "docker"
      config {
        image = "traefik:v2.10"
        ports = ["admin", "http", "deployments"]
        args = [
          "--api.dashboard=true",
          "--api.insecure=true", ### For Test only, please do not use that in production
          "--entrypoints.web.address=:${NOMAD_PORT_http}",
          "--entrypoints.traefik.address=:${NOMAD_PORT_admin}",
          "--entrypoints.deployments.address=:${NOMAD_PORT_deployments}",
          "--providers.nomad=true",
          "--providers.nomad.endpoint.address=http://{{ PRIVATE_SERVER_IP }}:4646" ### IP to your nomad server 
        ]
      }
    }
  }
}